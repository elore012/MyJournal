<p id="notice"><%= notice %></p>
<div id="h1-index">
<h1>Categories</h1>
<div>
<button id="add-category" class="button"><%= link_to 'New Category', new_category_path %></button>
</div>
</div>


<div id="category-index">
<div>
<table id="index-table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
      <td>Category id <%= category.id %></td>
      
        <td><button class ="button"><%= link_to 'Show', category %></button></td>
        <td><button class ="button"><%= link_to 'Edit', edit_category_path(category) %></button></td>
        <td><button class ="button"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Delete associated task first :(' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
</div>


